{% extends 'base.html.twig' %}

{% block title %}{{ agent.idcode }} - Spy App {% endblock %}

{% block content %}
    <h1 class="text-center">Détails de l'agent : {{ agent.idCode }}</h1>
    <table class="table mt-5">
        <thead>
        <tr>
        </tr>
        </thead>
        <tbody>
        <tr>
            {{ dump(agent) }}
            <th scope="row">Prénom :</th>
            <td>{{ agent.lastname }}</td>
        </tr>
        <tr>
            <th>Nom :</th>
            <td>{{ agent.lastname }}</td>
        </tr>
        <tr>
            <th>Date de naissance :</th>
            <td>{{ agent.dateOfBirth|date("m/d/Y") }}</td>
        </tr>
        <tr>
            <th>Nom de code</th>
            <td>{{ agent.idCode }}</td>
        </tr>
        <tr>
            <th>Nationalité :</th>
            <td>{{ agent.nationality }}</td>
        </tr>
        <tr>
            <th>Compétences :</th>

        </tr>

        </tbody>
    </table>
    <div class="text-center">
        <a href="{{ path('app_agent') }}" class="btn btn-primary btn-block"> Retour </a>
    </div>
{% endblock %}
