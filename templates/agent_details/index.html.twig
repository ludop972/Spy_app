{% extends 'base.html.twig' %}

{% block title %}{{ agents.idcode }} - Spy App {% endblock %}

{% block content %}
    <h1 class="text-center">Détails de l'agent : {{ agents.idCode }}</h1>
    <table class="table mt-5 table-responsive">
        <thead>
        <tr>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">Prénom :</th>
            <td>{{ agents.firstname }}</td>
        </tr>
        <tr>
            <th>Nom :</th>
            <td>{{ agents.lastname }}</td>
        </tr>
        <tr>
            <th>Date de naissance :</th>
            <td>{{ agents.dateOfBirth|date("m/d/Y") }}</td>
        </tr>
        <tr>
            <th>Nom de code</th>
            <td>{{ agents.idCode }}</td>
        </tr>
        <tr>
            <th>Nationalité :</th>
            <td>{{ agents.nationality }}</td>
        </tr>
        <tr>
            <th>Compétences :</th>
             <td>{% for agent in agents.specialities  %}
                    &#x2022; {{ agent.name }}<br>
                {% endfor %}</td>
        </tr>

        </tbody>
    </table>
    <div class="text-center">
        <a href="{{ path('app_agent') }}" class="btn btn-primary btn-block"> Retour </a>
    </div>
{% endblock %}
