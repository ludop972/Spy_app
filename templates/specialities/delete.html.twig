<form method="post" action="{{ path('app_specialities_delete', {'id': speciality.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer : {{ speciality.name}} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ speciality.id) }}">
    <button class="btn btn-sm btn-danger ">Supprimer</button>
</form>
